<%= error_message_for(@page) %>

<table summary="Page form fields">
	<tr>
		<th><%= f.lable(:topic_id, "topic") %> 
		</th>
		<td> <%= f.select(:topic_id,@topics.map{|s| [s.name,s.id]}) %> </td>
	</tr>

    <tr>
		<th><%= f.lable(:name, "name") %> </th>
		<td> <%= f.text_field(:name) %> </td>
	</tr> 

	<tr>
		<th><%= f.lable(:weblink) %>  </th>
		<td> <%= f.text_field(:weblink) %> </td>
	</tr>

     <tr>
		<th><%= f.lable(:position) %> </th>
		<td> <%= f.select(:position, 1..@page.count) %> </td>
	</tr>

	<tr>
		<th><%= f.lable(:visible) %> </th>
		<td> <%= f.check.box(:visible) %> </td>
	</tr>
</table>


 


	