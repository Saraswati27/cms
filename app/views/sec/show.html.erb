<% @page_title="sections" %>



<%= link_to "Back to List ", controller: "pages", action: 'index', topic_id: @topic.id, class: "back-link"  %>

<div class ="Section Show">

	<h2> Show Sections</h2>

	
	<table summary="Page detail view">

		<tr>
			<th> Name </th>
			<td> <%= @sc.name  %></td>
		</tr>

		
		<tr>
			<th> Position </th>
			<td> <%= @sc.position %></td>
		</tr>
		
		<tr>
			<th> Content </th>
			<td> <%= @sc.content %></td>
		</tr>
		
		
		<tr>
			<th> Created at </th>
			<td> <%= @sc.created_at %></td>
		</tr>
		
		<tr>
			<th> Updated at </th>
			<td> <%= @sc.updated_at %></td>
		</tr>

	</table>
</div>
		


		
		     	