<% @page1_title="Sections" %>

<%= link_to "Back to Pages ", controller: "pages", action: 'index' , topic_id: @topic.id, class: "back-link" %>


<div class ="section Index">
  <h2> Sections </h2>
  
  <style>
      table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
     }
     th, td {
       padding: 15px;
      }
    </style>
    
    <br>
    <br>
  <table class ="listing" summary ="Section List" style ="width:100%>
    <tr class ="header">
      <th> Name</th>
      <th>Position</th> 
      <th>Content</th>
      <th> Created at</th>
      <th> Updated at</th>

    </tr>
    <tr>
    </tr>
    
        <% @sc.each do |s| %>
      <tr class="<%= cycle('odd','even') %>">
         
         <td> <%= s.name %></td>
         <td> <%= s.position %></td>
         <td> <%= s.content %></td>
         <td> <%= s.created_at %></td>
         <td> <%= s.updated_at %></td>
         
            

      </tr> 
        <% end %>
        </table>
        </div> 
          